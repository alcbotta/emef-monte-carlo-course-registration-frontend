 
{
    "name": "Node.js Sample",
    "dockerFile": "Dockerfile",
    "remoteUser": "node",
    "settings": {
        "debug.javascript.usePreview": true,

        "terminal.integrated.profiles.linux": {
            "bash": {
                "path": "bash"
            },
            "zsh": {
                "path": "zsh"
            },
            "fish": {
                "path": "fish"
            },
            "tmux": {
                "path": "tmux",
                "icon": "terminal-tmux"
            },
            "pwsh": {
                "path": "pwsh",
                "icon": "terminal-powershell"
            }
        }
    },
    "extensions": [
        "dbaeumer.vscode-eslint",
        "msjsdiag.debugger-for-chrome",
        "esbenp.prettier-vscode"
    ]
}